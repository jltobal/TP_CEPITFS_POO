import { Habitacion } from "./habitacion";

export class HabitacionStandard extends Habitacion{

    private limpieza : boolean;
    private iva = 1.21;

    constructor(numero: number, estado: boolean, precioBase: number, limpieza : boolean){
        super(numero, estado, precioBase);
        this.limpieza = limpieza;
    }

    public reservar(): void {
        if (this.estado == false){
            this.estado = true;
        }else{
            console.log("No se puede reservar la habitacion");
        }
    }

    public liberar(): void {
        if (this.estado == true){
            this.estado = false;
        }else{
            console.log("La habitacion no esta ocupada");
        }
    }

    public getCostoTotal(): number {
        let precio = 0;
        if(this.limpieza == true){
            this.precioBase = this.precioBase *1.10; // 10% adicional de limpieza
        }
        precio = this.precioBase * this.iva; //Se agrega 21% de IVA
        return precio;
    }

}